# Binance API Configuration
BINANCE_REST_URL=https://fapi.binance.com
BINANCE_WS_URL=wss://fstream.binance.com

# Symbols to track (comma separated)
SYMBOLS=BTCUSDT,ETHUSDT

# Server Configuration
HOST=0.0.0.0
PORT=8022

# Database Configuration
CACHE_DB_PATH=./data/orderflow_cache.db

# Cache Settings
TRADE_CACHE_DAYS=7
FOOTPRINT_AGGREGATION_INTERVAL=60

# Orderbook Settings
ORDERBOOK_DEPTH_LEVELS=1000
ORDERBOOK_SYNC_INTERVAL=300

# Volume Profile Settings
VALUE_AREA_PERCENT=70
TICK_SIZE_BTCUSDT=0.1
TICK_SIZE_ETHUSDT=0.01

# Session Timezones (UTC times in HH:MM format)
SESSION_TOKYO_START=00:00
SESSION_TOKYO_END=09:00
SESSION_LONDON_START=07:00
SESSION_LONDON_END=16:00
SESSION_NY_START=13:00
SESSION_NY_END=22:00

# Imbalance Settings
IMBALANCE_RATIO_THRESHOLD=3.0
IMBALANCE_CONSECUTIVE_COUNT=3

# Depth Delta Settings
DEPTH_DELTA_PERCENT=1.0
DEPTH_DELTA_INTERVAL_SEC=5

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=1200
RATE_LIMIT_WEIGHT_PER_MINUTE=6000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Optional: Order placement (disabled by default)
ENABLE_ORDER_PLACEMENT=false
BINANCE_API_KEY=
BINANCE_API_SECRET=
