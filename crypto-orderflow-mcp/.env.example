# Crypto Orderflow MCP Server Configuration

# Server Settings
MCP_HOST=0.0.0.0
MCP_PORT=8022
LOG_LEVEL=INFO
DEBUG=false

# Binance API Configuration
BINANCE_REST_URL=https://fapi.binance.com
BINANCE_WS_URL=wss://fstream.binance.com
# Optional: API keys for authenticated endpoints (not required for market data)
# BINANCE_API_KEY=
# BINANCE_API_SECRET=

# Supported Symbols (comma-separated)
SYMBOLS=BTCUSDT,ETHUSDT

# Database Configuration
CACHE_DB_PATH=./data/orderflow_cache.db
DATA_RETENTION_DAYS=7

# Session Times (UTC) - Format: HH:MM-HH:MM
TOKYO_SESSION=00:00-09:00
LONDON_SESSION=07:00-16:00
NY_SESSION=13:00-22:00

# Orderflow Configuration
DEFAULT_TIMEFRAME=1m
FOOTPRINT_TICK_SIZE_BTC=0.1
FOOTPRINT_TICK_SIZE_ETH=0.01
IMBALANCE_RATIO_THRESHOLD=3.0
IMBALANCE_CONSECUTIVE_LEVELS=3

# Orderbook Configuration
ORDERBOOK_DEPTH_PERCENT=1.0
ORDERBOOK_UPDATE_INTERVAL_SEC=5
ORDERBOOK_SNAPSHOT_LIMIT=1000

# Liquidation Cache
LIQUIDATION_CACHE_SIZE=1000

# Rate Limiting
REST_RATE_LIMIT_PER_MIN=1200
WS_RECONNECT_DELAY_SEC=5
WS_MAX_RECONNECT_ATTEMPTS=10
